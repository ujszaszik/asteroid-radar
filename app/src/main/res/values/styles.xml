<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- App Name in Launcher" -->
    <style name="LauncherTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/black_ops_one</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/launcher_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Progress Bar-->
    <style name="DefaultProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/progress_bar_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:max">@integer/max_progress</item>
        <item name="android:progress">@integer/max_progress</item>
    </style>

    <!-- Default Text View-->
    <style name="DefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    TextView for Close Approach Date in List View-->
    <style name="AsteroidCloseApproachDateText" parent="DefaultTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <!--    TextView for Asteroid Codename is List View-->
    <style name="AsteroidCodenameText" parent="DefaultTextView">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/highlight_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView for Asteroid Details Attribute Name -->
    <style name="AsteroidDetailAttributeNameView" parent="DefaultTextView">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/split_margin</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView for Asteroid Details Attribute Value -->
    <style name="AsteroidDetailAttributeValueView" parent="DefaultTextView">
        <item name="android:layout_marginTop">@dimen/split_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--    Image View for Small Hazardous Image in List View-->
    <style name="HazardousSmallImageView">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <!--    Style with Default Small Margins-->
    <style name="SmallMarginHorizontallyAndVertically">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <!--    Default Style for Recycler View-->
    <style name="AsteroidListRecyclerView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--    Image View for Image of the Day-->
    <style name="ImageOfTheDayTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_transparent</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/raised_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--    Text View That Appears When No Asteroids Are Shown-->
    <style name="NoAsteroidShownTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/highlight_text_size</item>
        <item name="android:textStyle">italic</item>

    </style>
</resources>